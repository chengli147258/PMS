@model MvcPoint.Models.User
@{
    ViewBag.Title = "编辑用户";
}
@using (Html.BeginForm())
{
    <table style="font-size: 12px;" align="center">
        <tr>
            <td>
                登录名：
            </td>
            <td>
                @Html.EditorFor(model=>model.U_LoginName)
            </td>
        </tr>
        <tr>
            <td>
                密码：
            </td>
            <td>
                @Html.EditorFor(model=>model.U_Password)
            </td>
        </tr>
        <tr>
            <td>
                真实姓名：
            </td>
            <td>
                @Html.EditorFor(model=>model.U_RealName)
            </td>
        </tr>
        <tr>
            <td>
                性别：
            </td>
            <td>
                @Html.RadioButton("U_Sex","男",true)男
                @Html.RadioButton("U_Sex","女")女
            </td>
        </tr>
        <tr>
            <td>
                联系电话：
            </td>
            <td>
                @Html.EditorFor(model=>model.U_Telephone)
            </td>
        </tr>
        <tr>
            <td>
                角色：
            </td>
            <td>
                @Html.DropDownList("U_Role", "")
            </td>
        </tr>
        <tr>
            <td>
                是否可以删除：
            </td>
            <td>
                @Html.CheckBoxFor(model=>model.U_CanDelete)
            </td>
        </tr>
        <tr>
            <td>
                
            </td>
            <td>
                <input id="Submit1" type="submit" value="修改" />
                @Html.HiddenFor(model=>model.U_ID)
            </td>
        </tr>
    </table>
}

