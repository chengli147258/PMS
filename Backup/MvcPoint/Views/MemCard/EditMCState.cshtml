@model MvcPoint.Models.MemCard
@{
    ViewBag.Title = "修改会员卡状态";
}
<script src="../../Scripts/jquery-1.7.1.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        $("#MC_CardID").attr("readonly", true);
        $("#Submit").click(function () {
            $.get("/MemCard/EditMCStateTrue", { id: $("#MC_CardID").val(), state: $("#MC_State").val(),r:Math.random() }, function (data) {
                if (data == "1") {
                    alert("操作成功");
                    window.parent.$('#dlg').dialog('close'); 
                    window.parent.$('#memCardInfo').datagrid('reload');
                }
                else {
                    alert("操作失败，请重新操作");
                }
            });
        });
    });
</script>
<table align="center" style="font-size: 12px;">
    <tr>
        <td>
            会员卡号：
        </td>
        <td>
            @Html.EditorFor(model => model.MC_CardID)
        </td>
    </tr>
    <tr>
        <td>
            状态：
        </td>
        <td>
            @Html.DropDownList("MC_State", "")
        </td>
    </tr>
    <tr>
        <td>
        </td>
        <td>
            <input id="Submit" type="submit" value="修改" />
        </td>
    </tr>
</table>
